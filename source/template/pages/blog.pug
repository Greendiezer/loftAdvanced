extends ../_template

block variables
  - var title = 'Блог'

block content
  section.section.hero
    .welcome-background
      canvas.welcome-background-canvas
    .hero__container
      .hero__socials
        ul.socials
          each item in ['vk', 'github', 'in']
            li.socials__item
              a(href=`${item}`).socials__link
                svg.socials__link-img
                  use(xlink:href="/assets/img/sprite.svg#"+item)
      .burger.hero__menu
