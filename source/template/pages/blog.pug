        .burger__line.burger__line_2
        .burger__line.burger__line_3
      .arrow-down.hero__scroll-button
        svg.arrow-down__pic
          use(xlink:href="/assets/img/sprite.svg#arrow_down")
      .hero__title
        .section-title
          svg.section-title__pic
            use(xlink:href="/assets/img/sprite.svg#portfolio_header")
